[alias]
	lg = log --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	co = checkout
	ci = commit
	st = status
	br = branch
[diff]
	tool = default-difftool
[difftool "default-difftool"]
	cmd = vimdiff $LOCAL $REMOTE

[core]
	editor = vim

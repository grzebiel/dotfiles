set $mode_display System (v) docked, (z) docked 3, (h) homeDocked, (x) notDocked
mode "$mode_display" {
    bindsym x exec /bin/bash /home/grzebiel/.screenlayout/notDocked.sh
    bindsym v exec /bin/bash /home/grzebiel/.screenlayout/docked.sh
    bindsym h exec /bin/bash /home/grzebiel/.screenlayout/homeDocked.sh
    bindsym z exec /bin/bash /home/grzebiel/.screenlayout/docked3.sh

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+x mode "$mode_display"
bindsym $mod+shift+x exec /bin/bash /home/grzebiel/.screenlayout/notDocked.sh

bindsym $mod+greater move workspace to output right
bindsym $mod+less move workspace to output left

